#Vol up 
XF86AudioRaiseVolume
	pamixer -i 5 && pkill -RTMIN+10 i3blocks 
	# amixer -D pulse sset Master 5%+ > /dev/null && pkill -RTMIN+10 i3blocks
	#wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+ && pkill -RTMIN+10 i3blocks
	#pamixer -i 5 && pkill -RTMIN+10 i3blocks 
	#pactl set-sink-volume @DEFAULT_SINK@ +5% && pkill -RTMIN+10 i3blocks 
	#amixer -q set Master 5%+ && pkill -RTMIN+10 i3blocks 
	#amixer -q set Master 5%+ && polybar-msg hook volbar 1 

#Vol down 
XF86AudioLowerVolume
	pamixer -d 5 && pkill -RTMIN+10 i3blocks 
	# amixer -D pulse sset Master 5%- > /dev/null && pkill -RTMIN+10 i3blocks

#vol toggle 
XF86AudioMute
	amixer -q set Master toggle && pkill -RTMIN+10 i3blocks
	# amixer -D pulse set Master 1+ toggle > /dev/null && pkill -RTMIN+10 i3blocks
	#wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle && pkill -RTMIN+10 i3blocks

##mic toggle 
XF86AudioMicMute
   pactl set-source-mute @DEFAULT_SOURCE@ toggle && pkill -RTMIN+17 i3blocks

#mic up 
super + equal
   amixer set Capture 5%+ && pkill -RTMIN+17 i3blocks
#mic down 
super + minus
   amixer set Capture 5%- && pkill -RTMIN+17 i3blocks

#light up 
XF86MonBrightnessUp
		light -A 5 && pkill -RTMIN+20 i3blocks

#light up 
XF86Search
		light -A 5 && pkill -RTMIN+20 i3blocks
	#light -A 5 && polybar-msg hook backlight 1  

#light down 
XF86MonBrightnessDown
		light -U 5 && pkill -RTMIN+20 i3blocks
	#light -U 5 && polybar-msg hook backlight 1  

#light down 
XF86Explorer
		light -U 5 && pkill -RTMIN+20 i3blocks
	#light -U 5 && polybar-msg hook backlight 1  

