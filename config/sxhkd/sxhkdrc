#light up 
XF86MonBrightnessUp
	light -A 5 && pkill -RTMIN+20 i3blocks

#light up 
XF86Calculator
	light -A 5 && pkill -RTMIN+20 i3blocks

#light down 
XF86MonBrightnessDown
	light -U 5 && pkill -RTMIN+20 i3blocks

#light down 
XF86Explorer
	light -U 5 && pkill -RTMIN+20 i3blocks

